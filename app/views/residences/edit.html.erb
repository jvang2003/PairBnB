<%= form_for @residence, method: :put do |f| %>
  <%= f.text_field :city, placeholder: @residence.city %><br>
  <%= f.text_field :state, placeholder: @residence.state %><br>
  <%= f.text_field :zip_code, placeholder: @residence.zip_code %><br>
  <%= f.text_field :description, placeholder: @residence.description %><br>
  <%= f.submit "Update your place" %>
<% end %>
<%= form_for @residence, method: :delete do |f|%>
  <%=f.submit "Remove your place", data: {confirm: "Are you sure you want to delete this residence?"} %>
<%end%>
