  <%= form_for :residence, url: residences_path, method: :post do |f| %>
    <div class="form-group">
      <div class="field form-group">
        <%= f.text_field :city, placeholder: "City", class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.text_field :state, placeholder: "State", class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.text_field :zip_code, placeholder: "Zipcode", class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.text_field :neighborhood, placeholder: "Neighborhood name", class: 'form-control' %><br>
      </div>
      <div class="field form-group">
        <%= f.text_field :description, placeholder: "Description of your place", class: 'form-control' %><br>
      </div>
      <%= f.submit 'List your place', class: 'btn btn-danger' %>
    </div>
  <% end %>
