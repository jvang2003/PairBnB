<%= form_for @user, method: :put do |f| %>
  <%= f.text_field :name, placeholder: @user.name %><br>
  <%= f.text_field :email, placeholder: @user.email %><br>
  <%= f.text_field :github_url, placeholder: @user.github_url %><br>
  <%= f.text_field :twitter_url, placeholder: @user.twitter_url %><br>
  <%= f.text_field :bio, placeholder: @user.bio %><br>
  <%= f.submit "Update your profile" %>
<% end %>
