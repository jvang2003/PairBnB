              <%= f.text_field :text, placeholder: "Hey bro!" %><br>
              <%= hidden_field_tag 'recipient', "#{message.sender.id}" %>
              <%= f.submit 'Send message', class: "btn btn-danger" %>
            <% end %>
          </span>
        </li>
        <br><br>
      <% end %>
    </ul>
    </div>
  </div>
      <h4> Sent Messages</h4>
    <div class= "row">
    <div class = "col-md-2"></div>
    <div class = "col-md-4">
    <ul>
      <%@sent_messages.each do |sent_mess|%>
